{
	"name": "debt-collector-bot",
	"private": true,
	"version": "1.0.0",
	"description": "A Discord bot that can track you and your friends' debts to eachother.",
	"main": "app.js",
	"type": "module",
	"engines": {
		"node": ">=18.x"
	},
	"scripts": {
		"start": "node ./src/app.js",
		"register": "node ./src/commands/commands.js",
		"dev": "nodemon ./src/app.js",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage"
	},
	"dependencies": {
		"discord-interactions": "^4.0.0",
		"discord.js": "^14.21.0",
		"dotenv": "^16.0.3",
		"express": "^4.18.2",
		"jest": "^30.0.5",
		"mongodb": "^6.17.0"
	},
	"devDependencies": {
		"@babel/preset-env": "^7.28.0",
		"@jest/globals": "^29.7.0",
		"babel-jest": "^30.0.5",
		"mongodb-memory-server": "^9.1.6",
		"nodemon": "^3.0.0"
	},
	"jest": {
		"globals": {
			"jest": {
				"useESM": true
			}
		},
		"transform": {
			"^.+\\.[t|j]sx?$": "babel-jest"
		},
		"testMatch": [
			"**/tests/**/*.test.js"
		],
		"collectCoverageFrom": [
			"src/**/*.js",
			"!src/app.js",
			"!src/commands/commands.js"
		]
	}
}
